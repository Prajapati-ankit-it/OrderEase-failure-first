# Docker Environment Variables for OrderEase
# Copy this file to .env and update the values

# Database Configuration
DB_NAME=orderease
DB_USER=postgres
DB_PASSWORD=change_this_secure_password
DB_PORT=5432

# JWT Configuration (Generate strong secrets for production)
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_minimum_32_characters_long
JWT_REFRESH_EXPIRES_IN=30d

# Application Configuration
NODE_ENV=production
BACKEND_PORT=3000

# CORS Configuration
CORS_ORIGIN=http://localhost

# HTTP Ports
HTTP_PORT=80
HTTPS_PORT=443

# Frontend Configuration (if applicable)
# FRONTEND_PORT=3001
